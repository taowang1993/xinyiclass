---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';

const metadata = {
  title: 'Xinyi Class - Art & Yoga School in Toronto',
  description: 'Discover art and yoga classes designed to inspire, nurture, and transform in North York, Toronto.',
};
---

<Layout metadata={metadata}>

  <!-- Hero Section -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Explore Toronto Art Classes',
        href: '/toronto-art',
        target: '_self',
        icon: 'tabler:home',
      },
      { text: 'Discover Toronto Yoga Classes', href: '/toronto-yoga', target: '_self' },
    ]}
    image={{
      src: 'https://images.xinyiclass.com/xinyi/home/banner.jpg',
      alt: 'Xinyi Class Banner',
    }}
  >
    <Fragment slot="title">
      Unleash Your Creativity
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Discover art and yoga classes in North York, Toronto.
      </span>
    </Fragment>
  </Hero>

  <!-- Our Classes Section -->
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-5xl">
    <div class="text-center">
        <h2 class="text-3xl font-bold tracking-tight sm:text-4xl">Our Classes</h2>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-12">
        <!-- Toronto Art Classes Card -->
        <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg overflow-hidden">
            <img class="w-full h-64 object-cover" src="https://images.xinyiclass.com/xinyi/home/torontoart.jpg" alt="Toronto Art Classes">
            <div class="p-6">
                <h3 class="text-xl font-bold mb-2">Toronto Art Classes</h3>
                <p class="text-gray-700 dark:text-gray-400 mb-4">Explore your creativity through drawing, painting, and mixed media in our welcoming North York studio.</p>
                <a href="/toronto-art" class="inline-block bg-[var(--aw-color-primary)] hover:bg-[var(--aw-color-secondary)] text-white font-semibold py-2 px-4 rounded-lg transition-colors">Learn More</a>
            </div>
        </div>

        <!-- Toronto Yoga Classes Card -->
        <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg overflow-hidden">
            <img class="w-full h-64 object-cover" src="https://images.xinyiclass.com/xinyi/home/torontoyoga.jpg" alt="Toronto Yoga Classes">
            <div class="p-6">
                <h3 class="text-xl font-bold mb-2">Toronto Yoga Classes</h3>
                <p class="text-gray-700 dark:text-gray-400 mb-4">Find balance and wellness through our rejuvenating yoga sessions designed for all experience levels.</p>
                <a href="/toronto-yoga" class="inline-block bg-[var(--aw-color-primary)] hover:bg-[var(--aw-color-secondary)] text-white font-semibold py-2 px-4 rounded-lg transition-colors">Learn More</a>
            </div>
        </div>
    </div>
</section>

  <!-- Why Choose Xinyi Class Section -->
  <Features
    title="Why Choose Xinyi Class?"
    items={[
      {
        title: 'Experienced Instructors',
        description: 'Learn from passionate teachers with years of experience in art and yoga instruction.',
        icon: 'tabler:users',
      },
      {
        title: 'Small Class Sizes',
        description: 'Enjoy personalized attention with our small group sizes and supportive community.',
        icon: 'tabler:friends',
      },
      {
        title: 'Flexible Scheduling',
        description: 'Choose from various time slots to fit your busy lifestyle with both daytime and evening options.',
        icon: 'tabler:clock',
      },
      {
        title: 'Holistic Approach',
        description: 'We integrate art and yoga to foster both creative expression and inner peace.',
        icon: 'tabler:plant-2',
      },
      {
        title: 'Vibrant Community',
        description: 'Join a welcoming and supportive community of fellow learners and enthusiasts.',
        icon: 'tabler:heart-handshake',
      },
      {
        title: 'Modern Facilities',
        description: 'Our studio is equipped with modern tools and a serene ambiance for an optimal learning experience.',
        icon: 'tabler:building-community',
      },
    ]}
    columns={3}
  />

  <!-- Testimonials Section -->
  <Testimonials
    title="What Our Students Say"
    testimonials={[
      {
        name: 'Jane Doe',
        testimonial: 'The art classes at Xinyi have helped me rediscover my creativity. The instructors are supportive and the environment is so inspiring!',
      },
      {
        name: 'John Lee',
        testimonial: 'I\'ve been taking yoga classes at Xinyi for six months now and it has completely transformed my well-being. The instructors are knowledgeable and patient.',
      },
      {
        name: 'Samantha King',
        testimonial: 'A wonderful place to learn and grow. The community is fantastic and I always leave class feeling refreshed and inspired.',
      },
    ]}
  />
</Layout>
